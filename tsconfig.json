{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "noImplicitAny": true,
    "rootDir": "src",
    "declaration": true,
    "outDir": "dist",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noErrorTruncation": true
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "dist"
  ]
}
